<div class="card card-border border-accent w-full md:w-full lg:w-auto lg:max-w-3xl aspect-square bg-base-100 shadow-sm">
  <div class="card-body flex flex-col justify-center items-start h-full p-8">
    <statement class="flex flex-col gap-4">
      <preface class="text-2xl md:text-3xl lg:text-4xl font-semibold">
        <%
          vote_count = statement.get_upvotes.size
          user_voted = Current.user&.voted_for?(statement)

          if user_voted && vote_count == 1
            preface_text = "You agree that..."
          elsif user_voted && vote_count > 1
            other_count = vote_count - 1
            formatted_count = number_with_delimiter(other_count)
            preface_text = "You and #{formatted_count} other #{other_count == 1 ? 'person' : 'people'} agree that..."
          elsif vote_count == 1
            preface_text = "1 person agrees that..."
          elsif vote_count > 1
            formatted_count = number_with_delimiter(vote_count)
            preface_text = "#{formatted_count} people agree that..."
          else
            preface_text = "We agree that..."
          end
        %>
        <%= preface_text %>
      </preface>
      <content class="text-3xl md:text-5xl lg:text-6xl font-black leading-tight">
        <%= statement.content %>.
      </content>
    </statement>
  </div>
</div>
