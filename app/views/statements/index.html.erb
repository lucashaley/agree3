<p style="color: green"><%= notice %></p>

<% content_for :title, "Statements" %>

<h1 class="text-3xl font-bold mb-6">Statements</h1>

<div class="mb-8">
  <%= link_to "Create a new statement", new_statement_path, class: "btn btn-primary btn-lg w-full text-2xl py-6 h-auto" %>
</div>

<!-- Responsive Grid for Tables -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
  <!-- Top 10 Statements by Votes -->
  <div>
    <h2 class="text-2xl font-bold mb-4">Top Statements by Agreement</h2>
    <div class="overflow-x-auto">
      <table class="table table-zebra w-full">
        <thead>
          <tr>
            <th class="w-16">Rank</th>
            <th>Statement</th>
            <th class="w-24 text-center">Votes</th>
          </tr>
        </thead>
        <tbody>
          <% @top_statements.each_with_index do |statement, index| %>
            <tr class="cursor-pointer hover:bg-base-200" onclick="window.location='<%= statement_path(statement) %>'">
              <td class="font-bold text-center"><%= index + 1 %></td>
              <td><%= statement.content %></td>
              <td class="text-center font-semibold"><%= statement.get_upvotes.size %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Top 10 Statements by Variants -->
  <div>
    <h2 class="text-2xl font-bold mb-4">Top Statements by Variants</h2>
    <div class="overflow-x-auto">
      <table class="table table-zebra w-full">
        <thead>
          <tr>
            <th class="w-16">Rank</th>
            <th>Statement</th>
            <th class="w-24 text-center">Variants</th>
          </tr>
        </thead>
        <tbody>
          <% if @top_by_variants.any? %>
            <% @top_by_variants.each_with_index do |statement, index| %>
              <tr class="cursor-pointer hover:bg-base-200" onclick="window.location='<%= statement_path(statement) %>'">
                <td class="font-bold text-center"><%= index + 1 %></td>
                <td><%= statement.content %></td>
                <td class="text-center font-semibold"><%= statement.descendant_count %></td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="3" class="text-center italic text-gray-500">No statements with variants yet</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- 10 Most Recent Statements -->
  <div>
    <h2 class="text-2xl font-bold mb-4">Recent Statements</h2>
    <div class="overflow-x-auto">
      <table class="table table-zebra w-full">
        <thead>
          <tr>
            <th>Statement</th>
            <th class="w-32 text-center">Created</th>
          </tr>
        </thead>
        <tbody>
          <% @recent_statements.each do |statement| %>
            <tr class="cursor-pointer hover:bg-base-200" onclick="window.location='<%= statement_path(statement) %>'">
              <td>
                <%= statement.content %>
                <% if statement.parent.present? %>
                  <span class="badge badge-sm badge-ghost ml-2">variant</span>
                <% end %>
              </td>
              <td class="text-center text-sm text-gray-600">
                <%= time_ago_in_words(statement.created_at) %> ago
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- All Statements -->
<div class="divider"></div>

<h2 class="text-2xl font-bold mb-4">All Statements</h2>
<div id="statements" class="space-y-4">
  <% @statements.each do |statement| %>
    <div class="card bg-base-200">
      <div class="card-body">
        <%= render statement %>
        <div class="card-actions justify-end">
          <%= link_to "Show this statement", statement, class: "btn btn-sm btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-6">
  <%= link_to "New statement", new_statement_path, class: "btn btn-primary btn-lg text-lg" %>
</div>
